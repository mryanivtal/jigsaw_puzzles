{
  "trainer": {
    "run_name": "small_test_run",
    "add_timestamp_to_out_dir": false,
    "max_epochs": 6,
    "batch_size": 3,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 10,
    "num_workers": 0,
    "num_samples_to_save": 6
  },

  "dataset": {
    "short_debug_run": true,
    "dataset_type": "jigsaw",
    "target_type": "probability",
    "train_val_split_ratio": 0.8,
    "transforms": {
      "resize_y": 224,
      "resize_x": 224,
      "random_erasing": false
    },

    "scrambler": {
      "mode": "same_for_all_samples",
      "parts_x": 4,
      "parts_y": 3,
      "permutation_type": "random"
    }
  },

  "model": {
    "name": "resnet18",
    "pretrained": true,
    "out_features": 1,
    "output_type": "sigmoid"
  },

  "loss": {
    "name": "bce_loss"
  }
}