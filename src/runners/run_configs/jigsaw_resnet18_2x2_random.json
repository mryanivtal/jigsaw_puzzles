{
  "trainer": {
    "run_name": "jigsaw_resnet18_2x2_random",
    "add_timestamp_to_out_dir": true,
    "max_epochs": 200,
    "batch_size": 64,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 10,
    "num_workers": 2,
    "num_samples_to_save": 6
  },

  "dataset": {
    "short_debug_run": false,
    "dataset_type": "jigsaw",
    "train_val_split_ratio": 0.8,
    "transforms": {
      "resize_0": 224,
      "resize_1": 224
    },

    "scrambler": {
      "mode": "same_for_all_samples",
      "parts_x": 2,
      "parts_y": 2,
      "permutation_type": "random"
    }
  },

  "model": {
    "name": "resnet18"
  },

  "loss": {
    "name": "bce_loss"
  }
}