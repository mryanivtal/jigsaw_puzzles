{
  "trainer": {
    "run_name": "jigsaw_resnet18_3x3_random",
    "task": "jigsaw_bin_class",
    "add_timestamp_to_out_dir": true,
    "max_epochs": 200,
    "batch_size": 64,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 10,
    "num_workers": 2
  },

  "dataset": {
    "short_debug_run": false,
    "dataset_type": "jigsaw",
    "target_type": "probability",
    "train_val_split_ratio": 0.8,
    "transforms": {
      "resize_y": 224,
      "resize_x": 224,
      "random_erasing": false
    },

    "scrambler": {
      "mode": "same_for_all_samples",
      "parts_x": 3,
      "parts_y": 3,
      "permutation_type": "random"
    }
  },

  "model": {
    "name": "resnet18",
    "pretrained": true,
    "input_channels": 3,
    "out_features": 1,
    "output_type": "sigmoid"
  },

  "loss": {
    "name": "bce_loss"
  },

  "sample_saver": {
    "name": "jigsaw",
    "num_samples_to_save": 6
  }
}