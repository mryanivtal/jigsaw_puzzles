{
  "flow": {
    "run_train": true,
    "run_test": true
  },

  "trainer": {
    "run_name": "plain_vitb16custom_patch16_resize320",
    "task": "bin_class",
    "add_timestamp_to_out_dir": true,
    "max_epochs": 200,
    "batch_size": 64,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 10,
    "num_workers": 2
  },

  "dataset": {
    "short_debug_run": false,
    "dataset_type": "plain",
    "target_type": "probability",
    "train_val_split_ratio": 0.8,
    "transforms": {
      "resize_y": 320,
      "resize_x": 320,
      "random_erasing": false
    },

    "scrambler": {
      "mode": "different_for_all_samples",
      "parts_x": 5,
      "parts_y": 5,
      "permutation_type": "random"
    }
  },

  "model": {
    "name": "custom_vision_transformer",
    "image_size": 320,
    "input_channels": 3,
    "patch_size": 16,
    "num_layers": 12,
    "num_heads": 12,
    "hidden_dim": 768,
    "mlp_dim": 3072,
    "out_features": 1,
    "inference_normalizer": "sigmoid"
  },

  "loss": {
    "name": "bce_loss"
  },

  "sample_saver": {
    "name": "plain",
    "num_samples_to_save": 6
  }
}