{
  "flow": {
    "run_train": true,
    "run_test": true
  },

  "trainer": {
    "run_name": "patchAdg_resnet18_resize300_10x10",
    "task": "patch_adjacence",
    "add_timestamp_to_out_dir": true,
    "max_epochs": 200,
    "batch_size": 128,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 10,
    "num_workers": 3
  },

  "dataset": {
    "short_debug_run": false,
    "dataset_type": "patch_adjacence",
    "parts_x": 10,
    "parts_y": 10,
    "train_val_split_ratio": 0.8,
    "transforms": {
      "resize_y": 300,
      "resize_x": 300,
      "random_erasing": false
    }
  },

  "model": {
    "name": "resnet18",
    "pretrained": true,
    "input_channels": 6,
    "out_features": 5,
    "output_type": "plain",
    "inference_normalizer": "softmax"
  },

  "loss": {
    "name": "cross_entropy"
  },

  "sample_saver": {
    "name": "patch_adjacence",
    "num_samples_to_save": 6
  }
}