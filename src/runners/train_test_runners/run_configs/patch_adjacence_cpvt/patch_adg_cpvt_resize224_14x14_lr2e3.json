{
  "flow": {
    "run_train": true,
    "run_test": true
  },

  "trainer": {
    "run_name": "patch_adg_cpvt_resize224_14x14_lr2e3",
    "task": "patch_adjacence",
    "add_timestamp_to_out_dir": true,
    "max_epochs": 200,
    "batch_size": 128,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 25,
    "num_workers": 3
  },

  "dataset": {
    "short_debug_run": false,
    "dataset_type": "patch_adjacence",
    "parts_x": 14,
    "parts_y": 14,
    "train_val_split_ratio": 0.8,
    "concat_dim": 1,
    "transforms": {
      "resize_y": 224,
      "resize_x": 224,
      "random_erasing": false
    }
  },

  "model": {
    "name": "pcpvt",
    "img_size": 32,
    "patch_size": 4,
    "out_features": 5,
    "inference_normalizer": "softmax"
  },

  "optimizer": {
    "name": "adamW",
    "lr": 2e-3
  },

  "loss": {
    "name": "cross_entropy"
  },

  "sample_saver": {
    "name": "patch_adjacence",
    "num_samples_to_save": 6
  }
}