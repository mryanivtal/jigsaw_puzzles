{
  "flow": {
    "run_train": true,
    "run_test": true,
    "_start_from_lt_checkpoint": "D:\\docs\\Study\\DSML_IDC\\Final project\\project\\outputs\\model_8x8.ckpt"
  },

  "trainer": {
    "run_name": "pcpvt_resize224_patch4_lr2e3_sgd09_plainImage",
    "task": "bin_class",
    "add_timestamp_to_out_dir": true,
    "max_epochs": 400,
    "batch_size": 128,
    "check_val_every_n_epoch": 1,
    "early_stop_patience": 30,
    "num_workers": 2
  },

  "dataset": {
    "short_debug_run": false,
    "dataset_type": "plain",
    "target_type": "probability",
    "train_val_split_ratio": 0.8,
    "transforms": {
      "resize_y": 224,
      "resize_x": 224,
      "random_erasing": false
    },

    "scrambler": {
      "mode": "different_for_all_samples",
      "parts_x": 8,
      "parts_y": 8,
      "permutation_type": "random"
    }
  },

  "model": {
    "name": "pcpvt",
    "img_size": 224,
    "patch_size": 4,
    "out_features": 1,
    "__pretrained": true,
    "inference_normalizer": "sigmoid"
  },

  "optimizer": {
    "name": "SGD",
    "lr": 2e-3,
    "momentum": 0.9
  },

  "loss": {
    "name": "bce_loss"
  },

  "sample_saver": {
    "name": "plain",
    "num_samples_to_save": 6
  }
}